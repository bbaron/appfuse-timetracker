<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean id="homeController" class="com.bbaron.timetracker.web.controllers.HomeController">
		<property name="viewName" value="home" />
	</bean>
	<bean id="approveTimecardsController" class="com.bbaron.timetracker.web.controllers.HomeController">
		<property name="viewName" value="approve-timecards" />
	</bean>
	<bean id="newTimecardSetupController" class="com.bbaron.timetracker.web.controllers.NewTimecardSetupController">
		<property name="formView" value="new-timecard-setup" />
		<property name="successView" value="timecard" />
		<property name="commandClass" value="com.bbaron.timetracker.model.Timecard" />
	</bean>
	<bean id="searchTimecardsController" class="com.bbaron.timetracker.web.controllers.HomeController">
		<property name="viewName" value="search-timecards" />
	</bean>
	<bean id="timecardController" class="com.bbaron.timetracker.web.controllers.HomeController">
		<property name="viewName" value="timecard" />
	</bean>
	
	<bean id="simpleUrlHandlerMapping"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<value>
				/home.htm=homeController
				/approve-timecards.htm=approveTimecardsController
				/new-timecard-setup.htm=newTimecardSetupController
				/search-timecards.htm=searchTimecardsController
				/timecard.htm=timecardController
			</value>
		</property>
	</bean>
	<!-- View Resolver for JSPs -->
	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<!--property name="requestContextAttribute" value="rc" /-->
		<property name="viewClass"
			value="org.springframework.web.servlet.view.JstlView" />
		<property name="prefix" value="/WEB-INF/pages/" />
		<property name="suffix" value=".jsp" />
	</bean>
</beans>
